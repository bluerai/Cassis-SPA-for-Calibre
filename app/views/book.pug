.bookview

  .bookcontainer

    if book.serie
      .bookhead

        button.textbox(onclick="setOptionsSerie({serieId: " + book.serie.seriesId + "})")
          h6(style="padding: 5px;")
            span.color04 Serie: 
            span #{book.serie.seriesName}, 
            span=(book.tags[0].tagName === "Zeitschrift") ? "Nr. " : "Band " 
            span #{book.seriesIndex}

    .bookpage

      .bookcolumn

        .bookbox

          img#bookcover(src="/app/cover/book/" + book.bookId + book.signature)

          p.center(style="margin-bottom: 12px")
            - for(let author of book.authors)
              button.text.color04(onclick="setOptionsAuthor({authorsId: " + author.authorsId + "});")
                span #{author.authorsName} 

          p.center
            button.text.border00=book.title
            if book && book.tags[0] && book.authors && book.title && book.bookId
              button.text(onclick="sendMail(`" + book.authors.map(a => a.authorsName).toString() + "`, `" + book.title + "`, " + book.bookId + ", `" + book.tags[0].tagName + "`)")
                i.fa.fa-envelope(aria-hidden="true" style="margin-left: 10px")

          p
            - for(let format of book.formats)
              a.action(name="download" href="/app/file/" + format + "/" + book.bookId + book.signature  download=book.title)
                i.fa.fa-download(aria-hidden="true" style="margin-top: 30px")=" " + format.toUpperCase()

            if !book.comment
              h3(style="margin-top:30px")
                if book.publisher
                  span #{book.publisher.name}
                if book.pubdate
                  span=" (" + book.pubdate.substr(0,4) + ")"

      if book.comment
        .columnspace

        .bookcolumn
          #bookcontent
            h4 Inhalt
            p !{book.comment} 
            h3.center
              if book.publisher
                span #{book.publisher.name}
              if book.pubdate
                span=" (" + book.pubdate.substr(0,4) + ")" 

  h3#footer
    .tag
      - for(let tag of book.tags)
        span.enum #{tag.tagName}
          if tag.subTags
            span : 
              - for(let sub of tag.subTags)
                span.enum #{sub}

    button.chevrons(id="prev_book" type="text" style="left: 10px" onclick=`setOptionsBook({bookId: this.value, direction: -1})`)
      i.fa.fa-chevron-left(aria-hidden="true")

    button.chevrons(id="next_book" type="text" style="right: 10px" onclick=`setOptionsBook({bookId: this.value, direction: 1})`)
      i.fa.fa-chevron-right(aria-hidden="true")

